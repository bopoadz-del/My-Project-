# Diriyah Brain AI - Environment Variables

# OpenAI API Key
OPENAI_API_KEY=${OPENAI_API_KEY}

# Active files provider
ACTIVE_FILES_PROVIDER=google

# Google OAuth (placeholder values for local dev)
GOOGLE_CLIENT_ID=placeholder-client-id
GOOGLE_CLIENT_SECRET=placeholder-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Token and project storage
TOKEN_STORE_PATH=./tokens.json
PROJECT_FOLDER_STORE=./project_folders.json

# Database (optional for local dev)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=yourpassword
POSTGRES_DB=diriyah_brain_ai
POSTGRES_HOST=db
POSTGRES_PORT=5432

